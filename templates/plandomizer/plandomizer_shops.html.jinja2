{# Variables and classes not defined here are in plandomizer.html.jinja2 #}
<style>
    .shop-cost-picker {
        margin-top: 4px;
    }

    .shop-cost-input {
        margin: 0 4px;
        width: 20px;
    }
</style>
<div class="tab-pane plando-pane fade"
     id="nav-plando-{{panelName}}"
     role="tabpanel"
     aria-labelledby="nav-plando-{{panelName}}-tab">
    <h2 class="title">{{panel["name"]}}</h2>
    {% for kong, locations in panel["locations"].items() %}
        <h3 class="title">{{kong}}</h3>
        <div class="flex-container flex-center">
            {% for location in locations|plando_shop_sort %}
                <div class="location-picker">
                    <label for="plando_{{location["value"]}}_shop_item" class="location-label">
                        {{location["name"]}}
                    </label>
                    <select id="plando_{{location["value"]}}_shop_item"
                            name="plando_{{location["value"]}}_shop_item"
                            data-toggle="tooltip"
                            title
                            class="form-select plando-item-select">
                        <option value="">-- Randomize --</option>
                        {% for item in plando_items|plando_item_restrict(location) %}
                            <option value="{{item["value"]}}"
                                {{plando_option_class_annotation(panel["name"], kong, location["value"], item["value"])}}>
                                {{item["name"]}}
                            </option>
                        {% endfor %}
                    </select>
                    <label class="shop-cost-picker flex-container flex-center">
                        Item Cost:
                        <input type="number"
                                min="0"
                                max="255"
                                step="1"
                                data-toggle="tooltip"
                                title
                                id="plando_{{location["value"]}}_shop_cost"
                                name="plando_{{location["value"]}}_shop_cost"
                                class="form-control shop-cost-input">
                        Coins
                    </label>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
