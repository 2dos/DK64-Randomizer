{# Variables and classes not defined here are in plandomizer.html.jinja2 #}
<div class="tab-pane fade"
     id="nav-plando-{{panelName}}"
     role="tabpanel"
     aria-labelledby="nav-plando-{{panelName}}-tab">
    <h2 class="title">{{panel["display_name"]}}</h2>
    {% for _, levelObj in panel["levels"].items() %}
        <h3 class="title">{{levelObj["display_name"]}}</h3>
        <div class="minigame-level-section">
            {% for location in levelObj["locations"] %}
                <div class="location-picker">
                    <label for="{{location["enum_name"]}}_minigame_plando" class="location-label">
                        {{location["display_name"]}}
                    </label>
                    <select id="{{location["enum_name"]}}_minigame_plando"
                            name="{{location["enum_name"]}}_minigame_plando"
                            class="form-select">
                        <option value="">-- Randomize --</option>
                        {% for game in plando_minigames|plando_minigame_restrict(location["kong"]) %}
                            <option value="{{game["enum_name"]}}">{{game["display_name"]}}</option>
                        {% endfor %}
                    </select>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
