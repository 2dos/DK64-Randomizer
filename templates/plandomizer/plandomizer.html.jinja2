<div class="container border plando-container" style="margin-top: 20px;">
    <!-- The navigation panel. -->
    <div class="nav nav-pills flex-container flex-center plando-pills" id="plando-nav-tab" role="tablist">
        <button class="nav-link active nav-item plando-pill"
                id="nav-plando-general-tab"
                data-bs-toggle="tab"
                data-bs-target="#nav-plando-general"
                type="button"
                role="tab"
                aria-controls="nav-plando-general"
                aria-selected="true">
            <p class="select-title">General</p>
        </button>
        {% for panelName, panel in (plando_locations|plando_panel_restrict).items() %}
            <button class="nav-link nav-item plando-pill"
                    id="nav-plando-{{panelName}}-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#nav-plando-{{panelName}}"
                    type="button"
                    role="tab"
                    aria-controls="nav-plando-{{panelName}}"
                    aria-selected="false">
                <p class="select-title">{{panel["display_name"]}}</p>
            </button>
        {% endfor %}
    </div>
    {# The individual level tabs are populated here. Only one will show at a time. #}
    <div class="tab-content" id="nav-tabContent">
        {% include 'plandomizer/plandomizer_general.html.jinja2' %}
        {% for panelName, panel in (plando_locations|plando_panel_restrict).items() %}
            {% if panelName == "Shops" %}
                {% include 'plandomizer/plandomizer_shops.html.jinja2' %}
            {% elif panelName == "Minigames" %}
                {% include 'plandomizer/plandomizer_minigames.html.jinja2' %}
            {% elif panelName == "Hints" %}
                {% include 'plandomizer/plandomizer_hints.html.jinja2' %}
            {% else %}
                {% include 'plandomizer/plandomizer_levels.html.jinja2' %}
            {% endif %}
        {% endfor %}
    </div>
</div>
<script>
