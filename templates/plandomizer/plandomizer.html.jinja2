<style>
    .import-export-container {
        padding: 16px 0;
    }

    .plando-settings-button {
        margin: 0 8px;
        min-width: 125px;
    }

    .plando-import-errors {
        margin: 0 1rem 1rem;
    }

    .plando-pane {
        padding-bottom: 24px;
    }

    .plando-pills {
        padding: 24px 0;
    }

    .plando-pill {
        flex: 0 0 14%;
    }

    .location-picker {
        margin: 0 16px 32px;
        width: 30%;
    }

    .location-label {
        margin-bottom: 4px;
    }
</style>
