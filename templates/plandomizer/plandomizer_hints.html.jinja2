{# Variables and classes not defined here are in plandomizer.html.jinja2 #}
<style>
    .hint-info {
        margin: 16px 16px;
    }
</style>
<div class="tab-pane plando-pane fade"
     id="nav-plando-{{panelName}}"
     role="tabpanel"
     aria-labelledby="nav-plando-{{panelName}}-tab">
    <h2 class="title">{{panel["display_name"]}}</h2>
    <div class="hint-info">
        Hints can be a maximum of 900 characters. The only permitted characters
        are letters, numbers, spaces, and the characters ,.-?!
    </div>
    {% for kong, locations in panel["locations"].items() %}
        <h3 class="title">{{kong}}</h3>
        <div class="flex-container flex-center">
            {% for location in locations %}
                <div class="location-picker">
                    <label for="plando_{{location["enum_name"]}}_hint" class="location-label">
                        {{location["display_name"]}}
                    </label>
                    <div>
                        <input type="text"
                               id="plando_{{location["enum_name"]}}_hint"
                               name="plando_{{location["enum_name"]}}_hint"
                               data-toggle="tooltip"
                               title
                               placeholder="Enter hint text."
                               maxlength="900"
                            class="form-control">
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
