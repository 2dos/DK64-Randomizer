                            <option value="custom">
                                Custom
                            </option>
                        </select>
                        <div id="rambi_custom">
                            <div class="input-group mb-3 rambiColorPicker">
                                <input type="text" class="form-control" name="rambi_custom_color" id="rambi_custom_color" default="#000000">
