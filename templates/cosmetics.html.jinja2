<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col border">
            <h3>Music Rando</h3>
            <div class="form-check form-switch w-75" style="margin-left: 30%;">
                <input class="form-check-input"
                                       type="checkbox"
                                       name="random_music"
                                       id="random_music"
                                       value="True"/>
                    Randomize All
            </div>
            <div>
                Background Music
                <select name="music_bgm"
                        id="music_bgm"
                        style="width: 60%;"
                        class="form-select center-div"
                        aria-label="Background Music">
                    <option selected value="default">
                        Default Music
                    </option>
                    <option value="randomized">
                        Randomized
                    </option>
                    <option value="chaos">
                        Chaos
                    </option>
                    <option value="uploaded">
                        Upload your own
                    </option>
                </select>
            </div>
            <div>
                Fanfares
                <select name="music_fanfares"
                        id="music_fanfares"
                        style="width: 60%;"
                        class="form-select center-div"
                        aria-label="Fanfares">
                    <option selected value="default">
                        Default Fanfares
                    </option>
                    <option value="randomized">
                        Randomized
                    </option>
                    <option value="uploaded">
                        Upload your own
                    </option>
                </select>
            </div>
            <div>
                Events
                <select name="music_events"
                        id="music_events"
                        style="width: 60%;"
                        class="form-select center-div"
                        aria-label="Events">
                    <option selected value="default">
                        Default Events
                    </option>
                    <option value="randomized">
                        Randomized
                    </option>
                    <option value="uploaded">
                        Upload your own
                    </option>
                </select>
                <hr />
                <h3>Custom Music</h3>
                Cosmetics ZIP (Check wiki for format)
                <input accept=".zip"
                    class="form-control"
                    type="file"
                    id="music_file"
                    name="music_file"/>
            </div>
        </div>
        <div class="col border">
            <h3>Colors</h3>
            <div class="form-check form-switch w-75" style="margin-left: 30%;">
                <input class="form-check-input"
                        type="checkbox"
                        name="random_colors"
                        id="random_colors"
                        value="True"/>
                    Randomize All
            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="color-selector">
                        DK
                        <select name="dk_colors"
                                id="dk_colors"
                                class="form-select"
                                aria-label="DK"
                                multiple>
                            <option selected value="vanilla">
                                Vanilla
                            </option>
                            <option value="randomized">
                                Randomized
                            </option>
                            <option value="custom">
                                Custom
                            </option>
                        </select>
                        <div id="dk_custom">
                            <div class="input-group mb-3 dkColorPicker">
                                <input type="text" class="form-control" name="dk_custom_color" id="dk_custom_color" default="#000000">
                                <button class="btn btn-default rgb-btn" type="button">&nbsp;</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-2">
                    <div class="color-selector">
                        Diddy
                        <select name="diddy_colors"
                                id="diddy_colors"
                                class="form-select"
                                aria-label="Diddy"
                                multiple>
                            <option selected value="vanilla">
                                Vanilla
