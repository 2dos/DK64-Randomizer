    <script>
        function render_page(page){                    
            xmlhttp = new XMLHttpRequest();
            xmlhttp.open("GET", page, false);
            xmlhttp.send();
            var data = xmlhttp.responseText;
            document.documentElement.innerHTML = "";
            document.open();
            document.write(data);
            document.close();
            history.pushState({}, "page 1", "index.html");
        }
    </script>
