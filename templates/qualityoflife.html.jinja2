{% from 'macros.html.jinja2' import list_selector %}
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col border panel">
            <div class="flex-container">
                {#<div class="form-check form-switch item-switch" hidden>
                    <label data-toggle="tooltip" title="Training Barrels complete, start with Simian Slam, spawn in DK Isles, Japes lobby entrance open.">
                        <input class="form-check-input" type="checkbox" name="fast_start_beginning_of_game" value="True"/>
                        Fast Start - Beginning of Game
                    </label>
                </div>#}
                <div class="form-check form-switch item-switch">
                    <label data-toggle="tooltip"
                           title="This option enables various quality of life changes.">
                        <input class="form-check-input"
                               type="checkbox"
                               name="quality_of_life"
                               value="True"
                               checked/>
                        Misc Changes
                    </label>
                    <a href="https://github.com/2dos/DK64-Randomizer/wiki/Feature-Explanations#misc-changes-1"
                       target="_blank">
                        <img class="icon" src="./static/img/external_link.png">
                    </a>
                    {{ list_selector(misc_changes, "misc_changes", "MISC CHANGES", "This will open a popup that will let you customize what Quality of Life Options are active.&#10;This defaults to All options.", 17) }}
                    {# Remove end </div> as it's included in the macro for formatting #}
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="This option shortens all of the longer boss fights in the game.&#10;">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="shorten_boss"
                                   value="True"/>
                            Shorten Boss Fights
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="This option will allow you to switch kongs almost anywhere using DPad left or DPad right.&#10;You will still need to unlock the kong you want if Unlock All Kongs isn't enabled.&#10;You cannot switch kongs in rooms or areas that would otherwise break the puzzle.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="enable_tag_anywhere"
                                   id="enable_tag_anywhere"
                                   value="True"/>
                            Enable Tag Anywhere
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="This option will remove all hints as to what move you are purchasing in shops.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="disable_shop_hints"
                                   value="True"/>
                            Disable Shop Hints
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Displays an FPS counter tracked by the game itself.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="fps_display"
                                   value="True"/>
                            FPS Display
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Disables the check on Wrinkly Doors for having the appropriate kong unlocked.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="wrinkly_available"
                                   value="True"/>
                            Kongless Hint Doors
                        </label>
                    </div>
                </div>
                <div class="flex-container">
                    <div class="item-select">
                        <p class="select-title">Wrinkly Hints</p>
                        <select name="wrinkly_hints"
                                id="wrinkly_hints"
                                class="form-select"
                                aria-label="Randomization type"
                                data-toggle="tooltip"
                                title="Wrinkly hints are replaced with useful hints throughout your playthrough.">
                            <option selected value="standard">
                                Standard
                            </option>
                            <option value="cryptic">
                                Cryptic
                            </option>
                            <option value="off">
                                Off
                            </option>
                        </select>
                    </div>
                    <div class="item-select">
                        <p class="select-title">Helm Start Location</p>
                        <select name="helm_setting"
                                id="helm_setting"
                                class="form-select center-div"
                                aria-label="Randomization type"
                                data-toggle="tooltip"
                                title="This option will shorten the time it takes to beat Hideout Helm.&#10;Skip Start adds the following changes:&#10;- You will spawn in the Blast o Matic room.&#10;- Opens the roman numeral doors to each Kong's room.&#10;- The gates in front of the music pads are gone.&#10;Skip All: Spawns you at the crown door.">
                            <option selected value="default">
                                Vanilla
                            </option>
                            <option value="skip_start">
                                Skip Start
                            </option>
                            <option value="skip_all">
                                Skip All
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col border panel">
                <div class="flex-container">
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Warping to the DK isles is directly allowed from the pause menu.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="warp_to_isles"
                                   value="True"/>
                            Warp to Isles menu option
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Numbers are displayed on the outside portal of a troff n scoff zone of the amount of bananas still required.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="portal_numbers"
                                   value="True"
                                   checked/>
                            Troff n Scoff portal numbers
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Will display the face of each Kong that has a move to purchase there or 'SOLD OUT' if all moves are purchased.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="shop_indicator"
                                   value="True"
                                   checked/>
                            Shop Indicator
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip" title="Speeds up the Bananaport animation.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="fast_warps"
                                   value="True"/>
                            Fast Warps
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Displays a D-pad overlay for Tag Anywhere and a Homing Ammo Toggle.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="dpad_display"
                                   value="True"/>
                            D-Pad Display
                        </label>
                    </div>
                    <div class="form-check form-switch item-switch">
                        <label data-toggle="tooltip"
                               title="Automatically turns in keys once you collect them.">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="auto_keys"
                                   value="True"/>
                            Auto Key Turn ins
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(function() {
            $('[data-toggle="tooltip"]').tooltip({
                trigger: 'hover'
            })
        })
    </script>
